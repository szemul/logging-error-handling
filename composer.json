{
    "name": "szemul/logging-error-handling",
    "description": "Provides commonly usable error handlers and logging helpers and a common context to manage contextual data to be injected into errors and log messages.",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "mockery/mockery": "^1.0",
        "monolog/monolog": "^2.3.2",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^9.5.5",
        "sentry/sdk": "^3.1.0",
        "szemul/error-handler": "^1.0.0"
    },
    "suggest": {
        "monolog/monolog": "For using the monolog formatter",
        "szemul/error-handler": "For using the sentry error handler",
        "sentry/sentry": "For using the sentry error handler"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\LoggingErrorHandling\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\LoggingErrorHandling\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
